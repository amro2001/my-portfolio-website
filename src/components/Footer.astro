---
const currentYear = new Date().getFullYear().toString();
const websiteLaunchYear = "2024";

/**
 * If the current year equals the year the site launches, e.g output:
 *  - © 2023
 * Otherwise copyright notice outputs site launched to current year, e.g output:
 *  - © 2023-2025
 */
const copywriteYears = currentYear === websiteLaunchYear ? currentYear : `${websiteLaunchYear}-${currentYear}`;
---

<footer class="container">
  <p class="legal">Copyright &copy; {copywriteYears} Amro Elgammal: Source code for website can be found on <a target="_blank" rel="noreferrer" href="https://github.com/amro2001/my-portfolio-website">GitHub</a>.</p>
</footer>

<style lang="scss">
  footer {
  display: flex;
  justify-content: center;
  align-items: center;  /* Add this line to center vertically */
  margin-top: auto;
  padding: 1.5rem 0;
  width: 100%;
  p {
    font-size: var(--font-size-sm);
  }
}
footer a {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}
footer 
.legal {
  font-family: var(--font-family-IBM-Plex-Mono);
  color: var(--color-silver-400);
}

@media (min-width: 50em) {
  footer {
    flex-direction: row;
    justify-content: center;
    padding: 2.5rem 5rem;
  }
  footer a:hover,
	footer a:focus {
		text-decoration-color: currentColor;
	}
  
}